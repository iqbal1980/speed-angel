<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_height="fill_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    >
    <com.google.ads.AdView android:id="@+id/adView"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         ads:adUnitId="k44044b20495fafd791eb7936169dc9a"
                         ads:adSize="BANNER"
                         ads:testDevices="TEST_EMULATOR"
                         ads:loadAdOnCreate="true"/>
    
<TextView  android:id="@+id/blocktext"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/angel" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#bbccdd"
    android:text="Your Current Speed is:"
    android:textAppearance="?android:attr/textAppearanceLarge" />
<TextView
    android:id="@+id/textView_mps"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#bbccdd"
    android:textAppearance="?android:attr/textAppearanceLarge" />
<TextView
    android:id="@+id/textView_mph"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#bbccdd"
    android:textAppearance="?android:attr/textAppearanceLarge" />
<TextView
    android:id="@+id/textView_kph"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#bbccdd"
    android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
